<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  	xmlns:android="http://schemas.android.com/apk/res/android"
  	android:orientation="vertical"
  	android:layout_width="match_parent"
  	android:layout_height="match_parent">
    
	<include android:id="@+id/titleId1" layout="@layout/reuse_activity_title" /> 
	<include android:id="@+id/friendId1" layout="@layout/reuse_activity_friend" /> 
	    
    <EditText   android:id="@+id/message_history"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:clickable="true"  
                android:editable="false"  
                android:layout_weight="1"
                android:gravity="top"
                android:scrollbars="vertical"
                android:scrollbarSize="10dp"
                /> 
           
    <LinearLayout android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content">
        
       <EditText   android:id="@+id/say_message"
                   android:layout_width="fill_parent"
                   android:layout_height="fill_parent"
                   android:gravity="top"
                   android:layout_weight="1"
                   />
        <Button android:id="@+id/button_say"
                android:layout_weight="5"           
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="@string/send" 
                android:textColor="#000000"
                android:textStyle="bold"
                android:background="@drawable/button_green"/>
   </LinearLayout>
    
</LinearLayout>
