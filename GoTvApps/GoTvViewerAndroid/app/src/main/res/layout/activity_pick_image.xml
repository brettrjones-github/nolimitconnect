<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/LinearLayoutPickImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <include
            android:id="@+id/pick_image_title_layout"
            layout="@layout/reuse_activity_title" />
        
       <include
            android:id="@+id/pick_image_accept_cancel"
            layout="@layout/reuse_accept_cancel" />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
         	android:layout_marginLeft="4dp"
        	android:layout_marginRight="4dp"
            android:background="@color/button_bar_bkg_color"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/pick_image_camera_button"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:background="@drawable/button_camera_normal" />

            <TextView
                android:id="@+id/pick_image_camera_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:gravity="left|center_vertical"
                android:text="@string/camera"
                android:textAppearance="?android:attr/textAppearanceSmall" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        	android:layout_marginTop="2dp"
        	android:layout_marginLeft="4dp"
        	android:layout_marginRight="4dp"
            android:background="@color/button_bar_bkg_color"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/pick_image_gallery_button"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:background="@drawable/button_gallery_normal" />

            <TextView
                android:id="@+id/pick_image_gallery_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:gravity="left|center_vertical"
                android:text="@string/gallery"
                android:textAppearance="?android:attr/textAppearanceSmall" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        	android:layout_marginTop="2dp"
        	android:layout_marginLeft="4dp"
        	android:layout_marginRight="4dp"
            android:background="@color/button_bar_bkg_color"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/pick_image_library_button"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:background="@drawable/button_library_normal" />

            <TextView
                android:id="@+id/pick_image_library_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:gravity="left|center_vertical"
                android:text="@string/library"
                android:textAppearance="?android:attr/textAppearanceSmall" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        	android:layout_marginTop="2dp"
        	android:layout_marginLeft="4dp"
        	android:layout_marginRight="4dp"
            android:background="@color/button_bar_bkg_color"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/pick_image_browse_button"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:background="@drawable/button_file_browse_normal" />

            <TextView
                android:id="@+id/pick_image_browse_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:gravity="left|center_vertical"
                android:text="@string/browse_for_photo_on_device"
                android:textAppearance="?android:attr/textAppearanceSmall" />
        </LinearLayout>

          <LinearLayout
            android:id="@+id/pick_image_photo_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="2dp"
            android:gravity="center_horizontal"
            android:background="@color/picture_bkg_color"
            android:orientation="horizontal" >
	        <com.p2pgotv.gotvstation.ImageViewWithSizer
	            android:id="@+id/pick_image_photo_view"
		   	    android:contentDescription="@null"
		        android:layout_width="wrap_content"
		       	android:layout_height="wrap_content"
		       	android:layout_marginLeft="4dp" 
		       	android:layout_marginRight="4dp" 
		       	android:layout_marginTop="4dp" 
		       	android:layout_marginBottom="4dp" 
		        android:scaleType="center"
	            android:src="@drawable/me" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>