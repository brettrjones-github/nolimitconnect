<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ambilwarna_dialogView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center" >

    <RelativeLayout
        android:id="@+id/ambilwarna_viewContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/vx_color_picker_spacer"
        android:paddingLeft="@dimen/vx_color_picker_spacer"
        android:paddingRight="@dimen/vx_color_picker_spacer"
        android:paddingTop="@dimen/vx_color_picker_spacer" >

        <com.p2pgotv.gotvstation.VxColorPickerSquare
            android:id="@+id/ambilwarna_viewSatBri"
            android:layout_width="@dimen/vx_color_picker_hsvWidth"
            android:layout_height="@dimen/vx_color_picker_hsvHeight"
            android:layerType="software" />

        <ImageView
            android:id="@+id/ambilwarna_viewHue"
            android:layout_width="@dimen/vx_color_picker_hueWidth"
            android:layout_height="@dimen/vx_color_picker_hsvHeight"
            android:layout_marginLeft="@dimen/vx_color_picker_spacer"
            android:layout_toRightOf="@id/ambilwarna_viewSatBri"
            android:scaleType="fitXY"
            android:src="@drawable/vx_color_picker_hue" />

        <ImageView
            android:id="@+id/ambilwarna_alphaCheckered"
            android:layout_width="@dimen/vx_color_picker_hueWidth"
            android:layout_height="@dimen/vx_color_picker_hsvHeight"
            android:layout_marginLeft="@dimen/vx_color_picker_spacer"
            android:layout_toRightOf="@id/ambilwarna_viewHue"
            android:scaleType="fitXY"
            android:src="@drawable/vx_color_picker_alphacheckered_tiled" />

        <View
            android:id="@+id/ambilwarna_overlay"
            android:layout_width="@dimen/vx_color_picker_hueWidth"
            android:layout_height="@dimen/vx_color_picker_hsvHeight"
            android:layout_marginLeft="@dimen/vx_color_picker_spacer"
            android:layout_toRightOf="@id/ambilwarna_viewHue" />

        <ImageView
            android:id="@+id/ambilwarna_cursor"
            android:layout_width="9dp"
            android:layout_height="9dp"
            android:scaleType="matrix"
            android:src="@drawable/vx_color_picker_cursor" />

        <ImageView
            android:id="@+id/ambilwarna_alphaCursor"
            android:layout_width="9dp"
            android:layout_height="9dp"
            android:scaleType="matrix"
            android:src="@drawable/vx_color_picker_cursor" />

        <ImageView
            android:id="@+id/ambilwarna_target"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:scaleType="matrix"
            android:src="@drawable/vx_color_picker_target" />

        <LinearLayout
            android:id="@+id/ambilwarna_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ambilwarna_viewSatBri"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/vx_color_picker_spacer"
            android:gravity="center"
            android:orientation="horizontal" >

            <FrameLayout
                android:layout_width="60dp"
                android:layout_height="30dp" >

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/vx_color_picker_alphacheckered_tiled" />

                <View
                    android:id="@+id/ambilwarna_oldColor"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#faa" />
            </FrameLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/vx_color_picker_spacer"
                android:paddingRight="@dimen/vx_color_picker_spacer"
                android:src="@drawable/vx_color_picker_arrow_right" />

            <FrameLayout
                android:layout_width="60dp"
                android:layout_height="30dp" >

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/vx_color_picker_alphacheckered_tiled" />

                <View
                    android:id="@+id/ambilwarna_newColor"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#aaf" />
            </FrameLayout>
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>