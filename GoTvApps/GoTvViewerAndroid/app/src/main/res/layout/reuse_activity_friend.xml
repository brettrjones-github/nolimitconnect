<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content" 
    android:layout_width="match_parent" 
    android:id="@+id/reuse_friend_layout" 
    android:orientation="horizontal">
    <ImageView android:layout_height="wrap_content" android:id="@+id/friend_icon" android:layout_width="wrap_content" android:src="@drawable/button_people_normal" android:contentDescription="@string/friend"></ImageView>
    <LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/friendLayout2" android:orientation="vertical">
        <TextView android:id="@+id/friend_name" android:text="" android:textStyle="bold" android:gravity="center_vertical" android:layout_width="wrap_content" android:textAppearance="?android:attr/textAppearanceSmall" android:layout_marginLeft="5dp" android:layout_height="wrap_content"></TextView>
        <TextView android:id="@+id/friend_mood_msg" android:text="" android:gravity="center_vertical" android:layout_width="wrap_content" android:textAppearance="?android:attr/textAppearanceSmall" android:layout_marginLeft="5dp" android:layout_height="wrap_content"></TextView>
        <TextView android:id="@+id/friend_truths" android:text="" android:gravity="center_vertical" android:layout_width="wrap_content" android:textAppearance="?android:attr/textAppearanceSmall" android:layout_marginLeft="5dp" android:layout_height="wrap_content"></TextView>
    </LinearLayout>           
</LinearLayout>  
