<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical">

  	<include layout="@layout/reuse_activity_title" />
  	<ScrollView
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" >

        <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
	        
			<Button android:id="@+id/button_run_cam_server_in_background"
					android:layout_height="wrap_content"
					android:layout_width="match_parent"
					android:text="@string/run_cam_server_in_background"
					android:textColor="#000000"
					android:textStyle="bold"
					android:background="@drawable/button_green"/>  
					  
			<Button android:id="@+id/button_stop_cam_server"
					android:layout_height="wrap_content"
					android:layout_width="match_parent"
					android:text="@string/stop_cam_server"
					android:textColor="#000000"
					android:textStyle="bold"
					android:background="@drawable/button_green"/>
			   
			<include layout="@layout/reuse_cam_view" />				
		</LinearLayout>
	</ScrollView>  

</LinearLayout>   
 