<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
 
  	<include layout="@layout/reuse_activity_title" />

    <TextView android:id="@+id/app_title" 
        android:textColor="#00ff00" 
        android:textStyle="bold" 
        android:text="@string/app_name" 
        android:textAppearance="?android:attr/textAppearanceLarge" 
        android:layout_height="wrap_content" 
        android:layout_width="wrap_content" 
        android:layout_gravity="center">
    </TextView>
    <TextView android:id="@+id/app_copyright1" 
        android:text="@string/app_copyright_line1"
        android:layout_height="wrap_content" 
        android:layout_width="wrap_content" 
        android:layout_gravity="center_horizontal">
    </TextView>
    <TextView
        android:text="@string/app_copyright_line2"
        android:layout_height="wrap_content" 
        android:layout_width="wrap_content" 
        android:layout_gravity="center_horizontal">
    </TextView>
    <TextView android:id="@+id/app_version" 
        android:text="@string/app_version" 
        android:layout_height="wrap_content" 
        android:layout_width="wrap_content" 
        android:layout_gravity="center_horizontal">
    </TextView>
    <TextView android:id="@+id/app_website_label" 
        android:text="@string/visit_website"  
        android:layout_height="wrap_content" 
        android:layout_width="wrap_content" 
        android:layout_gravity="center_horizontal">
    </TextView>
    <TextView android:id="@+id/app_website_link" 
        android:text="@string/app_website" 
        android:layout_height="wrap_content" 
        android:layout_width="wrap_content" 
        android:layout_gravity="center_horizontal" 
        android:autoLink="web">
    </TextView>

    <TextView
        android:id="@+id/memory_usage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/about_disk_space"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

   <TextView
        android:id="@+id/about_blank_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    
    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
     
    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />   
</LinearLayout>
