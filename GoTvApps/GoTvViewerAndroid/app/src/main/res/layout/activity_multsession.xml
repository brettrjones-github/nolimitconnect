<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    
    <include layout="@layout/reuse_activity_title" />
    
  	<LinearLayout
        android:id="@+id/hangup_session_frame"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:background="@color/button_bar_bkg_color"
		android:gravity="center"
        android:orientation="horizontal" >
        <Button
            android:id="@+id/hangup_session_button"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/face_btn_normal" />
    </LinearLayout> 
  
	<!--<ScrollView
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" > -->
	    <LinearLayout
	        android:id="@+id/msessions_frame"
		    android:orientation="vertical"	        
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" >  
	        
       
	        	    
		    <LinearLayout
		        android:id="@+id/offers_frame"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:background="@color/button_bar_bkg_color"		        
		        android:orientation="horizontal"
		        android:padding="4dp" >          
				<LinearLayout 
			        android:layout_width="0dp"
			        android:layout_height="wrap_content"
			        android:layout_weight="1"
			        android:gravity="center"
			        >
			        <Button
			            android:id="@+id/audio_phone_button"
			            android:layout_width="35dp"
			            android:layout_height="35dp"
			            android:layout_marginLeft="8dp"
			            android:layout_marginRight="4dp"
			            android:background="@drawable/button_phone_normal"
			            android:paddingLeft="4dp"
			            android:paddingRight="4dp" />
	 			</LinearLayout> 
		   		<LinearLayout 
			        android:layout_width="0dp"
			        android:layout_height="wrap_content"
			        android:layout_weight="1"
			        android:gravity="center" >
				        		        			        		
			        <Button
			            android:id="@+id/video_chat_button"
			            android:layout_width="35dp"
			            android:layout_height="35dp"
			            android:layout_marginLeft="8dp"
			            android:layout_marginRight="4dp"
			            android:background="@drawable/button_vidphone_normal"
			            android:paddingLeft="4dp"
			            android:paddingRight="4dp" />
		 		</LinearLayout>
		 		 
			    <LinearLayout 
			        android:layout_width="0dp"
			        android:layout_height="wrap_content"
			        android:layout_weight="1"
			        android:gravity="center" >
				        		        		        		        
			        <Button
			            android:id="@+id/truth_or_dare_button"
			            android:layout_width="35dp"
			            android:layout_height="35dp"
			            android:layout_marginLeft="8dp"
			            android:background="@drawable/button_truth_or_dare_normal" />
 				</LinearLayout> 
			</LinearLayout>
		    <LinearLayout
		        android:id="@+id/response_frame"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:background="#ffffffff"
		        android:visibility="gone"
		        android:orientation="horizontal"
		        android:padding="4dp" >  
		           
		        <Button
		            android:id="@+id/accept_session_button"
		            android:layout_width="35dp"
		            android:layout_height="35dp"
		            android:background="@drawable/button_accept_normal" />
		
			    <TextView
			        android:id="@+id/accept_text"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
					android:text="@string/accept"   
					/>
		
		        <Button
		            android:id="@+id/reject_session_button"
		            android:layout_width="35dp"
		            android:layout_height="35dp"
		            android:layout_marginLeft="8dp"
		            android:layout_marginRight="4dp"
		            android:background="@drawable/button_cancel_normal"
		            android:paddingLeft="4dp"
		            android:paddingRight="4dp" />
		        
			    <TextView
			        android:id="@+id/reject_text"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
					android:text="@string/reject"   
					/>      
		    </LinearLayout>
		      
			<LinearLayout
		        android:id="@+id/tod_frame"
		        android:layout_width="fill_parent"
		    	android:layout_height="wrap_content"
		    	android:visibility="gone"
		    	android:orientation="vertical" >
		
			    <TextView
			        android:id="@+id/textMyDareCnt"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
					android:text="@string/waiting_dare_statistics"   
					/>
			    
			    <TextView
			        android:id="@+id/textMyTruthCnt"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
					android:text="@string/waiting_dare_statistics"        
			        />
			 
			    <TextView
			        android:id="@+id/textFriendDareCnt"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
					android:text="@string/waiting_dare_statistics"        
			        />
			                
			    <TextView
			        android:id="@+id/textFriendTruthCnt"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
					android:text="@string/waiting_dare_statistics"        
			        /> 
				<View
			        android:id="@+id/textTodChallengeTopBar"
			        android:layout_width="match_parent"
			        android:layout_height="1dp"
			        android:visibility="gone"
			        android:background="@color/blue_border_color" />
							 
			  	<LinearLayout
			    	android:layout_width="fill_parent"
			    	android:layout_height="wrap_content"
			    	android:orientation="horizontal" >
			        
				    <ImageView
				        android:id="@+id/todChallengeStatusImage"
				        android:layout_width="32dp"
				        android:layout_height="32dp"
				        android:visibility="gone" />		
			  	    	
				    <TextView
				        android:id="@+id/todChallengeStatusLabel"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:minHeight="30dp"
				        android:visibility="gone"
				        android:textAppearance="?android:attr/textAppearanceMedium"
				        android:background="@color/tod_challenge_color"
						android:text="" />		
				</LinearLayout>
				 			    
				<LinearLayout
			    	android:layout_width="fill_parent"
			    	android:layout_height="wrap_content"
			    	android:orientation="horizontal" >
			       
					<Button android:id="@+id/but_truth"
					            style="?android:attr/buttonStyleSmall"
					 	        android:layout_weight="1"   		
								android:layout_width="0dip"
		  						android:layout_height="35dp"
					   		    android:text="@string/challenge_truth"
					 	 		android:textColor="#000000"
					  			android:textStyle="bold"
					  			android:background="@drawable/button_green"/>
					
					<Button android:id="@+id/but_dare"
					            style="?android:attr/buttonStyleSmall"
					 	        android:layout_weight="1"   		
								android:layout_width="0dip"
		  						android:layout_height="35dp"
					   		    android:text="@string/challenge_dare"
					 	 		android:textColor="#000000"
					  			android:textStyle="bold"
					  			android:background="@drawable/button_green"/>
			    </LinearLayout>
			    
			    <View
			        android:layout_width="match_parent"
			        android:layout_height="1dp"
			        android:background="@color/blue_border_color" />	
			    <TextView
			        android:id="@+id/textTodGameStatusLabel"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:background="@color/status_text_bkg_color"
					android:text="@string/waiting_dare_statistics" />		
			    <View
			        android:layout_width="match_parent"
			        android:layout_height="1dp"
			        android:background="@color/blue_border_color" />
			</LinearLayout>  
		    
			<include layout="@layout/reuse_cam_view" />
		    
			<ListView
		        android:id="@+id/chatMessageListview"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:layout_weight="1"
		        android:cacheColorHint="#00000000"
		        android:divider="@null"
		        android:dividerHeight="3dp"
		        android:stackFromBottom="true"
				android:transcriptMode="alwaysScroll"
		        android:scrollbarStyle="outsideOverlay" />
		
		    <View
		        android:layout_width="match_parent"
		        android:layout_height="1dp"
		        android:background="@color/blue_border_color" />
		
		    <com.p2pgotv.gotvstation.ChatMessageInputToolBox
		        android:id="@+id/chatMessageInputToolBox"
		        android:background="@color/button_bar_bkg_color"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content" />
		    
		    <View
		        android:layout_width="match_parent"
		        android:layout_height="1dp"
		        android:background="@color/blue_border_color" />
		</LinearLayout>
	<!--</ScrollView>   -->
	
 </LinearLayout>
 