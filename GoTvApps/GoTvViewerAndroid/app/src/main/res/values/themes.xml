<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <declare-styleable name="Theme">
        <attr name="rte_icMenuLoad" format="reference" />
        <attr name="rte_icMenuCloseClearCancel" format="reference" />
        <attr name="rte_icMenuSave" format="reference" />
        <attr name="rte_icMenuRotateLeft" format="reference" />
        <attr name="rte_icMenuRotateRight" format="reference" />

        <attr name="rte_ToolbarButton" format="reference" />
        <attr name="rte_ToolbarSpinner" format="reference" />
        <attr name="rte_ToolbarSpinnerItem" format="reference" />
        <attr name="rte_ToolbarSpinnerSelectedColor" format="color" />

        <attr name="rte_icToolbarSave" format="reference" />
        <attr name="rte_icToolbarBold" format="reference" />
        <attr name="rte_icToolbarItalic" format="reference" />
        <attr name="rte_icToolbarUnderline" format="reference" />
        <attr name="rte_icToolbarStrikethrough" format="reference" />
        <attr name="rte_icToolbarSuperscript" format="reference" />
        <attr name="rte_icToolbarSubscript" format="reference" />
        <attr name="rte_icToolbarAlignLeft" format="reference" />
        <attr name="rte_icToolbarAlignCenter" format="reference" />
        <attr name="rte_icToolbarAlignRight" format="reference" />
        <attr name="rte_icToolbarIncIndent" format="reference" />
        <attr name="rte_icToolbarDecIntent" format="reference" />
        <attr name="rte_icToolbarBullet" format="reference" />
        <attr name="rte_icToolbarNumber" format="reference" />
        <attr name="rte_icToolbarFont" format="reference" />
        <attr name="rte_icToolbarFontSize" format="reference" />
        <attr name="rte_icToolbarFontColor" format="reference" />
        <attr name="rte_icToolbarBGColor" format="reference" />
        <attr name="rte_icToolbarLink" format="reference" />
        <attr name="rte_icToolbarImage" format="reference" />
        <attr name="rte_icToolbarCapture" format="reference" />
        <attr name="rte_icToolbarUndo" format="reference" />
        <attr name="rte_icToolbarRedo" format="reference" />
        <attr name="rte_icToolbarClear" format="reference" />

        <attr name="rte_VerticalDivider" format="reference" />
    </declare-styleable>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="android:textColorPrimary">#ff000000</item>
        <item name="android:textColorSecondary">#ff000000</item>
        <item name="android:textColorTertiary">#ff000000</item>
        <item name="android:textColorPrimaryInverse">#ff3f3f3f</item>
        <item name="android:textColorSecondaryInverse">#ff3f3f3f</item>
        <item name="android:textColorTertiaryInverse">#ff3f3f3f</item>
    </style>

    <!-- Application theme. -->
    <style name="MyTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:textColorPrimary">#ff000000</item>
        <item name="android:textColorSecondary">#ff000000</item>
        <item name="android:textColorTertiary">#ff000000</item>
        <item name="android:textColorPrimaryInverse">#ff3f3f3f</item>
        <item name="android:textColorSecondaryInverse">#ff3f3f3f</item>
        <item name="android:textColorTertiaryInverse">#ff3f3f3f</item>
    </style>

    
    <style name="ThemeLight" parent="@style/RTE_ThemeLight">
        <item name="colorPrimary">#CFD8DC</item>
        <item name="colorAccent">#37474F</item>
        <item name="colorPrimaryDark">#90A4AE</item>

        <item name="rte_icMenuLoad">@drawable/ic_menu_load_light</item>
        <item name="rte_icMenuCloseClearCancel">@drawable/ic_menu_close_clear_cancel_light</item>
         <item name="rte_icMenuSave">@drawable/ic_menu_save_light</item>
         <item name="rte_icMenuRotateLeft">@drawable/ic_menu_rotate_left_light</item>
         <item name="rte_icMenuRotateRight">@drawable/ic_menu_rotate_right_light</item>
    </style>

    <style name="ThemeDark" parent="@style/RTE_ThemeDark">
        <item name="colorPrimary">#3F51B5</item>
        <item name="colorAccent">#ECEFF1</item>
        <item name="colorPrimaryDark">#1A237E</item>
        
        <item name="rte_icMenuLoad">@drawable/ic_menu_load_dark</item>
        <item name="rte_icMenuCloseClearCancel">@drawable/ic_menu_close_clear_cancel_dark</item>
        <item name="rte_icMenuSave">@drawable/ic_menu_save_dark</item>
        <item name="rte_icMenuRotateLeft">@drawable/ic_menu_rotate_left_dark</item>
        <item name="rte_icMenuRotateRight">@drawable/ic_menu_rotate_right_dark</item>
    </style>
    

</resources>
